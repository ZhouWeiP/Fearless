<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WatchBoard">
        //表盘的边距
        <attr name="wb_padding" format="dimension"></attr>
        
        //表盘文字大小
        <attr name="wb_text_size" format="dimension"></attr>

        //时针的宽度
        <attr name="wb_hour_pointer_width"  format="dimension"></attr>

        //分针的宽度
        <attr name="wb_minute_pointer_width"  format="dimension"></attr>

        //秒针的宽度
        <attr name="wb_second_pointer_width"  format="dimension"></attr>
        
        //指针圆角值
        <attr name="wb_pointer_corner_radius" format="dimension"></attr>

        //指针末尾长度
        <attr name="wb_pointer_end_length" format="dimension"></attr>

        //时刻刻度颜色
        <attr name="wb_scale_long_color" format="dimension"></attr>

        //非时刻刻度颜色
        <attr name="wb_scale_short_color" format="dimension"></attr>

        //时针颜色
        <attr name="wb_hour_pointer_color" format="dimension"></attr>

        //分针颜色
        <attr name="wb_minute_pointer_color" format="dimension"></attr>

        //秒针颜色
        <attr name="wb_second_pointer_color" format="dimension"></attr>

    </declare-styleable>

</resources>